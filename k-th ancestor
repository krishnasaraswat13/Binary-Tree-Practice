/*
Structure of Node class is:

class Node {
    int data;
    Node left, right;

    public Node(int data){
        this.data = data;
    }
}
*/

class Solution {
    static int ans;
    public int kthAncestor(Node root, int k, int node) {
        // Write your code here
        ans=-1;
        helper(root,k,node,ans);
       return ans;
    }
    public int helper(Node root, int k, int node,int ans) {
    if(root==null){
        return -1;
    }
    if(root.data==node){
        return 0;
    }
    int leftdist=helper(root.left,k,node,ans);
    int rightdist=helper(root.right,k,node,ans);
    if(leftdist==-1 && rightdist==-1){
        return -1;
    }
    if(Math.max(leftdist,rightdist)+1==k){
        Solution.ans=root.data;
        
    }
    return Math.max(leftdist,rightdist)+1;
    }
}