/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution { ///////////mene kya kiya sirf ek variable le liya p krke usko list me add kraya jb temp null ho baaki sb level order traversal ki trah hai
    public List<Integer> rightSideView(TreeNode root) {
        List<Integer> ls=new ArrayList<>();
       Queue<TreeNode> q=new LinkedList<>();
       if(root==null){
        return ls;
       }
       q.add(root);
       q.add(null);
       int p=root.val;
       while(!q.isEmpty()){
        
        TreeNode temp=q.remove();
        if(q.isEmpty()){
            ls.add(p);
            break;
        }
        if(temp==null){
            q.add(null);
            ls.add(p);
           
        
        }
        else{
            if(temp.left!=null){
                q.add(temp.left);
            }
            if(temp.right!=null){
                q.add(temp.right);
            }
        }
        if(temp!=null){
             p=temp.val;
        }
       }
       return ls;
    }
}