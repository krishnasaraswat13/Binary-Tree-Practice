class Solution {
    // Function to convert a binary tree into its mirror tree.
    void mirror(Node node) {
        // Your code here
        helper(node);
    }
    Node helper(Node node){
        if(node==null) return null;
        Node left=helper(node.left);
        Node right=helper(node.right);
        node.left=right;
        node.right=left;
        return node;
        
    }
}